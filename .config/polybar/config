[module/wireless-network]
type = internal/network
interface = wlp3s0

format-connected =   <label-connected>

; Default: %ifname% %local_ip%
label-connected = %essid% 
label-connected-foreground = ${colors.foreground}

[module/wired-network]
type = internal/network
interface = enp2s0

label-connected = %local_ip%
format-connected =  <label-connected>

[module/cpu]
type = internal/cpu
interval = 1

format =  <label> 
; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = %percentage%%

[module/memory]
type = internal/memory
interval = 1

format =   <label> 

; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
;   %percentage_swap_used%
;   %percentage_swap_free%
;   %mb_swap_total%
;   %mb_swap_free%
;   %mb_swap_used%
;   %gb_swap_total%
;   %gb_swap_free%
;   %gb_swap_used%

label = %gb_free%

[module/playerctl]
type = custom/script
format =   <label>
exec = playerctl metadata --format "{{ title }} - {{ artist }}"
exec-if = playerctl metadata
click-left = playerctl previous
click-middle = playerctl play-pause
click-right = playerctl next

[module/bluetooth]
type = custom/script
format =  <label> 
exec = bluetoothctl info | awk '/Name/ {$1=""; print $0}'
exec-if = bluetoothctl -- info | grep Device

[module/bluetooth-battery]
type = custom/script
format = <label> 
exec = ~/.local/bin/bluetooth_battery $(bluetoothctl info | awk '/^Device/ {print $2}') | awk '{print $6}'
exec-if = bluetoothctl -- info | grep Device
interval = 10

[module/microphone]
type = custom/script
format = <label>
exec = if [[ $(pacmd list-sources | awk '/\*/,EOF {print}' | awk '/muted/ {print $2; exit}') = "yes" ]] ; then echo ; else echo ; fi
click-left= pactl set-source-mute @DEFAULT_SOURCE@ toggle
tail = true
